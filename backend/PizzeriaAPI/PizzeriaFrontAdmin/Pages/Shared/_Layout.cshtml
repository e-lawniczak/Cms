<body class="g-sidenav-show  bg-gray-100">
    @if (this.Model.Title != "Login" && this.Model.Title != "Register" && this.Model.Title != "Reset password" && this.Model.Title != "Logout")
    {
        <partial name="_Header" />
    }
    <main role="main" class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
        @if (this.Model.Title != "Login" && this.Model.Title != "Register" && this.Model.Title != "Reset password" && this.Model.Title != "Logout")
        {

            <partial name="_Navbar" />
        }
        <div class="container-fluid py-4">
            @RenderBody()
            @* <partial name="_Footer" /> *@
        </div>
    </main>
